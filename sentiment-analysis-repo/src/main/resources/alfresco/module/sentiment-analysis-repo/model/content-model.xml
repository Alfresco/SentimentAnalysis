        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.alfresco.com/model/machine/learning/sentiment/analysis/1.0" prefix="mlsa"/>
    </namespaces>

    <aspects>
        <aspect name="mlsa:sentimentAnalyzable">
            <title>Sentiment Analysis Rating</title>
            <properties>
                <property name="mlsa:positiveCount">
                    <type>d:long</type>
                </property>
                <property name="mlsa:neutralCount">
                    <type>d:long</type>
                </property>
                <property name="mlsa:negativeCount">
                    <type>d:long</type>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>